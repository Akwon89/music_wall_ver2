<div class="page-header">
  <h1>Post a Track<small>  Something cool...</small></h1>
</div>
<hr/>

<% if @track.errors.any? %>
<div>
  <strong>Some issues with your message, please fix them:</strong>
    <ul>
      <% @track.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
</div>
<% end %>


<form method="post" action="/tracks" >
<div>
  <label for="basic-url">Artist:</label>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon3">Who made it!?</span>
        <input type="text" name="artist" value="<%= @track.artist %>"> 
    </div>
</div>

<div>
  <label for="basic-url">Title:</label>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon3">Whats it called!?</span>
        <input type="text" name="title" value="<%= @track.title %>"> 
    </div>
</div>

<div>
  <label for="basic-url">URL:</label>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon3">Link to song</span>
        <input type="text" name="url" value="<%= @track.url %>"> 
    </div>
</div>

<div>
  <input type="submit" value="Submit">
</div>
</form>          

